# System control mode
set $mode_system (r)eboot, (s)hutdown, (l)ogout, suspen(d), lo(c)k
mode "$mode_system" {
    bindsym r exec systemctl reboot, mode "default"
    bindsym s exec systemctl poweroff, mode "default"
    bindsym l exec swaymsg exit, mode "default"
    bindsym d exec systemctl suspend, mode "default"
    bindsym c exec ~/.config/sway/scripts/lockman.sh

    # exit system mode: "Enter" or "Escape"
    bindsym Return      mode "default"
    bindsym Escape      mode "default"
}
bindsym $mod+Shift+e mode $mode_system
